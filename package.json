{
  "name": "wai-incident-report-api-develop",
  "version": "1.0.0",
  "description": "administrative neighborhood incidents api",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "ts:node": "ts-node -r tsconfig-paths/register ./src/index.ts",
    "build": "tsc --build tsconfig.json && tsc-alias -p tsconfig.json",
    "build:watch": "tsc --build tsconfig.json --watch",
    "lint": "eslint src --cache --ext .ts",
    "lint:fix": "eslint src --cache --fix --ext .ts",
    "prettier:code-check": "prettier --check --no-error-on-unmatched-pattern --ignore-unknown ./**/*",
    "prettier:fix": "prettier --write --no-error-on-unmatched-pattern --ignore-unknown ./**/*",
    "test": "jest --config=jest.config.js",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "server:prod": "npm run build && node -r tsconfig-paths/register ./dist/src/index.js",
    "server:prod:docker": "node -r tsconfig-paths/register ./dist/src/index.js"
  },
  "keywords": [],
  "author": "Ovitec",
  "license": "ISC",
  "engines": {
    "node": ">20.0.0",
    "npm": ">10.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.12.7",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/winston": "^2.4.4",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tsc-watch": "^6.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@types/jest": "^29.5.12",
    "@types/jwt-decode": "^3.1.0",
    "@types/sequelize": "^4.28.20",
    "axios": "^1.6.8",
    "common": "^0.2.5",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.1.2",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nodemon": "^3.1.0",
    "sequelize": "^6.37.3",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write --no-error-on-unmatched-pattern --ignore-unknown",
    "*.ts": "npm run lint --"
  }
}
